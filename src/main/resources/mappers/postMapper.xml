<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.doongie.instagram.post.dao.PostDAO">

	<insert id="insertPost" parameterType="map">
	
		INSERT INTO
			`post`
		(
			`userId`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{userId}
			, #{content}
			, #{imagePath}
			, now()
			, now()
		)	
	
	</insert>
	
	<select id="selectPostList" resultType="com.doongie.instagram.post.model.Post">
	
		SELECT * FROM
			`post`
		ORDER BY
			`id` DESC
	
	</select>



</mapper>
